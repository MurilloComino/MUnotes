<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="5dp" />
                    <solid android:color="@color/color_button_pressed" />
                </shape>
            </item>
            <item android:height="2dp" android:bottom="5dp" android:gravity="bottom" android:left="35dp" android:right="5dp">
                <shape>
                    <gradient android:centerColor="#CCFAFAFA" android:endColor="#00FFFFFF" android:startColor="#00FFFFFF" />

                </shape>

            </item>


        </layer-list>

    </item>


    <item>
        <layer-list>
            <item>


                <shape>
                    <corners android:radius="5dp" />
                    <solid android:color="@color/color_normal_button" />
                </shape>


            </item>
            <item android:height="2dp" android:bottom="5dp" android:gravity="bottom" android:left="35dp" android:right="5dp">

                <shape>


                    <gradient android:centerColor="#33FAFAFA" android:endColor="#00FFFFFF" android:startColor="#00FFFFFF" />
                </shape>
            </item>


        </layer-list>
    </item>


</selector>