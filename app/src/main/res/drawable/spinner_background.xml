<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
       <item>

        <shape android:shape="rectangle">
            <solid android:color="@color/colorBackgroundEditext" />
            <stroke android:color="@color/colorText2" android:width="1dp">

            </stroke>
        </shape>
    </item>
    <item
        android:gravity="center_vertical|right"
        android:left="20dp">
        <layer-list>
            <item
                android:width="12dp"
                android:height="12dp"
                android:gravity="center">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="#ffffff" />
                        <stroke
                            android:width="1dp"
                            android:color="#8f8f8f" />
                        <corners android:radius="1.5dp"/>
                    </shape>
                </rotate>
            </item>
            <item
                android:width="30dp"
                android:height="10dp"
                android:bottom="12dp"
                android:top="2dp"
                android:right="2dp"
                android:gravity="center">
                <shape android:shape="rectangle">

                    <solid android:color="@color/colorBackgroundEditext" />
                </shape>
            </item>
        </layer-list>
    </item>


</layer-list>