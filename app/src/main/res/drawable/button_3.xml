<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="5dp" />
                    <solid android:color="@color/colorWhite" />
                </shape>
            </item>
            <item>
                <shape>
                    <gradient android:centerColor="#33000000" android:endColor="#00000000" android:startColor="#00000000" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="3dp" android:top="3dp">
                <shape>
                    <corners android:radius="5dp" />
                    <solid android:color="#3c000000" />
                </shape>
            </item>
            <item android:bottom="3dp" android:right="3dp">
                <shape>
                    <solid android:color="@color/colorWhite" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>