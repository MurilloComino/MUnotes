<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape android:shape="rectangle">
            <solid android:color="@color/colorSpinner" />
            <stroke android:color="@color/colorText2" android:width="1dp">

            </stroke>
        </shape>
    </item>
    <item
        android:gravity="center_vertical|right"
        android:left="20dp">
        <layer-list>

            <item
                android:width="30dp"
                android:height="10dp"
                android:bottom="12dp"
                android:top="2dp"
                android:right="2dp"
                android:gravity="center">
                <shape android:shape="rectangle">

                    <solid android:color="@color/colorSpinner" />
                </shape>
            </item>
        </layer-list>
    </item>


</layer-list>