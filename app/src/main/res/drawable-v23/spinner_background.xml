<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
       <item>

        <shape android:shape="rectangle">
            <solid android:color="@color/colorBackgroundEditext" />
            <stroke android:color="@color/colorText2" android:width="1.25dp">

            </stroke>
        </shape>
    </item>
    <item
        android:gravity="center_vertical|right"
        android:left="20dp">
        <layer-list>
            <item
                android:width="12dp"
                android:height="12dp"
                android:left="6dp"
                android:gravity="center">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/colorBackgroundEditext" />
                        <stroke
                            android:width="2dp"
                            android:color="@color/colorText2" />
                        <corners android:radius="1.5dp"/>
                    </shape>
                </rotate>
            </item>
            <item
                android:width="30dp"
                android:height="10dp"
                android:bottom="12dp"
                android:top="2dp"
                android:right="2dp"
                android:gravity="center">
                <shape android:shape="rectangle">

                    <solid android:color="@color/colorBackgroundEditext" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item
        android:width="1.5dp"
        android:height="20dp"
        android:bottom="1dp"
        android:top="1dp"
        android:right="23dp"
        android:gravity="center_vertical|right">
        <shape android:shape="rectangle">

            <solid android:color="@color/colorText2" />
        </shape>
    </item>


</layer-list>